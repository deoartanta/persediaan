<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card3Pener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-25dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearBottomsheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@id/linearLayoutTllHrg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvSupplierBottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tv_titikd8"
                            android:gravity="end"
                            android:paddingEnd="5dp"
                            android:text="Pt. Philips"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_titikd8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tvLblSupplier"
                            android:gravity="center"
                            android:paddingHorizontal="5dp"
                            android:text=":"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvLblSupplier"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Supplier"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lytAla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvAlamatBottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tv_titikd10"
                            android:gravity="end"
                            android:paddingEnd="5dp"
                            android:text="Jl. Ikan paus no23"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_titikd10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tvLblAlamat"
                            android:gravity="center"
                            android:paddingHorizontal="5dp"
                            android:text=":"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvLblAlamat"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Alamat"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lytJmlitem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvJmlItemBottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tv_titikd11"
                            android:gravity="end"
                            android:paddingEnd="5dp"
                            android:text="100 Item"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_titikd11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tvLblitem"
                            android:gravity="center"
                            android:paddingHorizontal="5dp"
                            android:text=":"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvLblitem"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Jumlah Item"
                            android:textColor="@color/black" />

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutTllHrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/btnLayoutBottomSheet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <!--Total Harga 1-->
                <RelativeLayout
                    android:id="@+id/ttlHrgLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvLbltotalhrg"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Total Harga"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_titikd6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tvLbltotalhrg"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:text=":"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvTotalhrg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tv_titikd6"
                        android:gravity="end"
                        android:paddingEnd="5dp"
                        android:text="Rp. 50.000"
                        android:textColor="@color/black" />
                </RelativeLayout>
                <!--Total Harga 2-->
                <RelativeLayout
                    android:id="@+id/ttlHrg2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvLbltotalhrg2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Total Harga"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_titikd7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tvLbltotalhrg2"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:text=":"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvTotalhrg2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_titikd7"
                        android:layout_alignParentLeft="true"
                        android:gravity="end"
                        android:paddingEnd="5dp"
                        android:text="Rp. 50.000"
                        android:textColor="@color/black" />
                </RelativeLayout>
            </LinearLayout>
            <!--Bottom Sheet-->
            <RelativeLayout
                android:id="@+id/btnLayoutBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/btnSimpan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#2CA602"
                            android:text="Simpan" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/btnBatal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:backgroundTint="#A6A6A6"
                            android:text="Batal" />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/viewCollapse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="40dp">

                <View
                    android:layout_width="30dp"
                    android:layout_height="5dp"
                    android:background="@drawable/btn_action"
                    android:backgroundTint="#9E000000" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>