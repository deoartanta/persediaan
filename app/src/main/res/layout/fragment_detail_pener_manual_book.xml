<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailPenerManualBookFragment">

    <TextView
        android:id="@+id/tapBackgroundManualBook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/cardLinearManualBook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/background_detail_pener" />

        <LinearLayout
            android:id="@+id/layoutRootContentDetailPenerManualBook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_transparant_manual_book"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/RelativeContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:visibility="invisible"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingVertical="10dp"
                        android:paddingStart="10dp">

                        <TextView
                            android:id="@+id/tvTglpurchase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="07 Januari 2021" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/tv_lblnopurchase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="No Pusrchase" />

                            <TextView
                                android:id="@+id/tv_titikd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_lblnopurchase"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/tvPurchase"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd"
                                android:paddingEnd="5dp"
                                android:text="SBY-0012-11" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/tv_lblarea"
                                android:layout_width="95dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="Area" />

                            <TextView
                                android:id="@+id/tv_titikd4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_lblarea"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/tvArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd4"
                                android:paddingEnd="5dp"
                                android:text="Surabaya" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/tvLblsts"
                                android:layout_width="95dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="Status" />

                            <TextView
                                android:id="@+id/tv_titikd6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblsts"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/tvSts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd6"
                                android:paddingEnd="5dp"
                                android:text="Belum Diterima" />
                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2MnBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card1"
                    android:orientation="vertical"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card2_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardUseCompatPadding="false">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvlblDetailItem"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/btnImageAddItem"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:gravity="center_vertical"
                                    android:paddingEnd="5dp"
                                    android:text="Detail Item"
                                    android:textAllCaps="true" />

                                <ImageView
                                    android:id="@+id/btnImageAddItem"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/btn_action"
                                    android:backgroundTint="@color/white"
                                    app:srcCompat="@drawable/ic_baseline_add_circle_24" />

                                <TextView
                                    android:id="@+id/tvLine1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@id/tvlblDetailItem"
                                    android:layout_marginTop="5dp"
                                    android:background="#9F818181" />

                                <TextView
                                    android:id="@+id/tvItemNotFound"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tvLine1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginVertical="10dp"
                                    android:text="Tidak Ada Item"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tvLine1"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        app:cardElevation="3dp"
                                        app:cardUseCompatPadding="false">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="16dp">

                                            <RelativeLayout
                                                android:id="@+id/relativeLayout"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="8dp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent">

                                                <TextView
                                                    android:id="@+id/tvQtyPener"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="0dp"
                                                    android:layout_alignTop="@id/tvSatuanPener"
                                                    android:layout_alignBottom="@id/tvSatuanPener"
                                                    android:layout_marginTop="0dp"
                                                    android:layout_marginEnd="5dp"
                                                    android:layout_toStartOf="@+id/tvSatuanPener"
                                                    android:gravity="center_vertical"
                                                    android:text="100" />

                                                <TextView
                                                    android:id="@+id/tvNmItemPener"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentLeft="true"
                                                    android:layout_marginStart="16dp"
                                                    android:layout_marginEnd="16dp"
                                                    android:text="Mie Sedap" />

                                                <TextView
                                                    android:id="@+id/tvSatuanPener"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_below="@id/tvHrgPener"
                                                    android:layout_alignEnd="@+id/tvHrgPener"
                                                    android:paddingVertical="10dp"
                                                    android:text="Box" />

                                                <TextView
                                                    android:id="@+id/tvHrgPener"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="16dp"
                                                    android:layout_toStartOf="@+id/imgEdit"
                                                    android:gravity="right"
                                                    android:text="Rp. 600.000" />

                                                <ImageView
                                                    android:id="@+id/imgEdit"
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:layout_above="@id/imgHps"
                                                    android:layout_alignParentEnd="true"
                                                    android:visibility="invisible"
                                                    app:srcCompat="@drawable/ic_baseline_create_24_primary" />

                                                <ImageView
                                                    android:id="@+id/imgHps"
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:layout_alignBottom="@id/tvSatuanPener"
                                                    android:layout_alignParentEnd="true"
                                                    android:layout_marginBottom="5dp"
                                                    android:visibility="invisible"
                                                    app:srcCompat="@android:drawable/ic_delete" />

                                                <TextView
                                                    android:id="@+id/line2"
                                                    android:layout_width="0dp"
                                                    android:layout_height="1dp"
                                                    android:layout_below="@id/tvSatuanPener"
                                                    android:layout_alignStart="@id/tvTtlHrgPener"
                                                    android:layout_alignEnd="@id/imgEdit"
                                                    android:layout_marginTop="5dp"
                                                    android:background="#858585" />

                                                <TextView
                                                    android:id="@+id/tvTtlHrgPener"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_below="@id/line2"
                                                    android:layout_marginTop="10dp"
                                                    android:layout_marginEnd="16dp"
                                                    android:layout_toStartOf="@+id/imgEdit"
                                                    android:gravity="right"
                                                    android:text="Rp. 600.000.000" />

                                            </RelativeLayout>

                                            <ImageView
                                                android:id="@+id/imgEdit2"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:layout_alignParentEnd="true"
                                                android:layout_marginTop="8dp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/ic_baseline_create_24_primary" />

                                            <ImageView
                                                android:id="@+id/imgHps2"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:layout_alignParentEnd="true"
                                                android:layout_marginTop="8dp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/imgEdit2"
                                                app:srcCompat="@android:drawable/ic_delete" />

                                            <com.airbnb.lottie.LottieAnimationView
                                                android:id="@+id/tapEditDetailPenerManualBook"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                app:layout_constraintBottom_toBottomOf="@id/imgEdit2"
                                                app:layout_constraintEnd_toEndOf="@id/imgEdit2"
                                                app:layout_constraintStart_toStartOf="@id/imgEdit2"
                                                app:layout_constraintTop_toTopOf="@id/imgEdit2"
                                                app:lottie_autoPlay="true"
                                                app:lottie_loop="true"
                                                app:lottie_rawRes="@raw/tap" />

                                            <com.airbnb.lottie.LottieAnimationView
                                                android:id="@+id/tapHpsDetailPenerManualBook"
                                                android:layout_width="100dp"
                                                android:layout_height="100dp"
                                                app:layout_constraintBottom_toBottomOf="@id/imgHps2"
                                                app:layout_constraintEnd_toEndOf="@id/imgHps2"
                                                app:layout_constraintStart_toStartOf="@id/imgHps2"
                                                app:layout_constraintTop_toTopOf="@id/imgHps2"
                                                app:lottie_autoPlay="true"
                                                app:lottie_loop="true"
                                                app:lottie_rawRes="@raw/tap" />

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="invisible" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/lblManualBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:padding="10dp"
        android:text="Tap disini untuk mengedit item"
        android:textColor="#FFFDFD"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLewati"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card3Pener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-25dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            app:cardUseCompatPadding="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/linearBottomsheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/linearLayoutTllHrg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tvSupplierBottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd8"
                                android:gravity="end"
                                android:paddingEnd="5dp"
                                android:text="Pt. Philips"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_titikd8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblSupplier"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvLblSupplier"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="Supplier"
                                android:textColor="@color/black" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lytAla"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tvAlamatBottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd10"
                                android:gravity="end"
                                android:paddingEnd="5dp"
                                android:text="Jl. Ikan paus no23"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_titikd10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblAlamat"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvLblAlamat"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="Alamat"
                                android:textColor="@color/black" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lytJmlitem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tvJmlItemBottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd11"
                                android:gravity="end"
                                android:paddingEnd="5dp"
                                android:text="100 Item"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_titikd11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblitem"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvLblitem"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="Jumlah Item"
                                android:textColor="@color/black" />

                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutTllHrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/btnLayoutBottomSheet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <!--Total Harga 1-->
                    <RelativeLayout
                        android:id="@+id/ttlHrgLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvLbltotalhrg"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:text="Total Harga"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_titikd6ManualBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tvLbltotalhrg"
                            android:gravity="center"
                            android:paddingHorizontal="5dp"
                            android:text=":"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvTotalhrg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tv_titikd6ManualBook"
                            android:gravity="end"
                            android:paddingEnd="5dp"
                            android:text="Rp. 50.000"
                            android:textColor="@color/black" />
                    </RelativeLayout>
                </LinearLayout>
                <!--Bottom Sheet-->
                <RelativeLayout
                    android:id="@+id/btnLayoutBottomSheet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="30dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp">

                                <LinearLayout
                                    android:id="@+id/layoutBtnSimpan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <Button
                                        android:id="@+id/btnSimpan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#2CA602"
                                        android:text="Simpan"
                                        tools:ignore="DuplicateClickableBoundsCheck" />
                                </LinearLayout>

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/tapSimpanDetailPenerManualBook"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center_horizontal"
                                    app:layout_constraintBottom_toBottomOf="@id/layoutBtnSimpan"
                                    app:layout_constraintEnd_toEndOf="@id/layoutBtnSimpan"
                                    app:layout_constraintStart_toStartOf="@id/layoutBtnSimpan"
                                    app:layout_constraintTop_toTopOf="@id/layoutBtnSimpan"
                                    app:lottie_autoPlay="true"
                                    app:lottie_loop="true"
                                    app:lottie_rawRes="@raw/tap" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp">

                                <LinearLayout
                                    android:id="@+id/layoutBtnBatal"
                                    android:layout_width="match_parent"
