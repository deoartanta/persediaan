<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cardLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="6dp"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--No Purchase-->

                        <TextView
                            android:id="@+id/tvResIdTrans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sby-001-11"
                            android:textSize="14sp"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvLblPurchase"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/abril_fatface"
                                android:gravity="start|center_vertical"
                                android:text="No Purchase"
                                android:textAllCaps="true"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvResPurchase"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/antic"
                                android:gravity="start|center_vertical"
                                android:text=": mlg-001-12"
                                android:textSize="14sp" />

                        </LinearLayout>
                        <!--Tanggal-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvLblTGL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/abril_fatface"
                                android:gravity="start|center_vertical"
                                android:text="Tanggal"
                                android:textAllCaps="true"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvResTGL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/antic"
                                android:text=": 12 Juli 2021"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearExpandDetailContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">
                            <!--Admin-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvLblAdmin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/abril_fatface"
                                    android:gravity="start|center_vertical"
                                    android:text="Admin"
                                    android:textAllCaps="true"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvResAdmin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/antic"
                                    android:gravity="start|center_vertical"
                                    android:paddingRight="5dp"
                                    android:text=": Admin"
                                    android:textSize="14sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </LinearLayout>
                            <!--Area/Satker-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvLblArea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/abril_fatface"
                                    android:gravity="start|center_vertical"
                                    android:text="Area/Satker"
                                    android:textAllCaps="true"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvResArea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/antic"
                                    android:gravity="start|center_vertical"
                                    android:text=": Malang/Perikanan"
                                    android:textSize="14sp" />

                            </LinearLayout>
                            <!--Status-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvLblSTS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/abril_fatface"
                                    android:gravity="start|center_vertical"
                                    android:text="Status"
                                    android:textAllCaps="true"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvResSTS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/antic"
                                    android:gravity="start|center_vertical"
                                    android:paddingRight="5dp"
                                    android:text=": Belum dikonvert"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <!--Jumlah-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvLblJMLItem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/abril_fatface"
                                android:gravity="start|center_vertical"
                                android:text="Jumlah"
                                android:textAllCaps="true"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvResJMLItem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/antic"
                                android:gravity="start|center_vertical"
                                android:text=": 3 item"
                                android:textSize="14sp" />

                        </LinearLayout>
                        <!--Total Harga-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvLblTotalHrg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/abril_fatface"
                                android:gravity="start|center_vertical"
                                android:text="Total Harga"
                                android:textAllCaps="true"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvResTotalHrg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:fontFamily="@font/antic"
                                android:gravity="start|center_vertical"
                                android:paddingRight="5dp"
                                android:text=": Rp 15.000"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                        <!--Button-->

                        <TextView
                            android:id="@+id/imgDetailpener"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_baseline_keyboard_arrow_down_24"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnShowDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:gravity="center"
                    android:background="@drawable/bg_button_outline"
                    android:text="Show Detail >>"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>