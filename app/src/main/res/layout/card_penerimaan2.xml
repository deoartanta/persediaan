<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cardLinear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="6dp"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--No Purchase-->

                        <TextView
                            android:id="@+id/tvResIdTrans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sby-001-11"
                            android:textSize="14sp"
                            android:visibility="gone"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/tvLblNamaItem"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="start|center_vertical"
                                android:text="No Purchase"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_titikd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblNamaItem"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvResNmItem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd"
                                android:fontFamily="@font/poppins"
                                android:gravity="start|center_vertical"
                                android:paddingEnd="5dp"
                                android:text="mlg-001-12"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <!--Tanggal-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/tvLblTGL"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="start|center_vertical"
                                android:text="Tanggal"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_titikd5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblTGL"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvResTGL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd5"
                                android:fontFamily="@font/poppins"
                                android:gravity="start|center_vertical"
                                android:text="12 Juli 2021"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/linearExpandDetailContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">
                            <!--Admin-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:id="@+id/tvLblSupplier"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="start|center_vertical"
                                    android:text="Supplier"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_titikd12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tvLblSupplier"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="5dp"
                                    android:text=":"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tvResSupplier"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tv_titikd12"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="start|center_vertical"
                                    android:paddingRight="5dp"
                                    android:text="Admin"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:id="@+id/tvLblAlaSupplier"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="start|center_vertical"
                                    android:text="Alamat"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_titikd9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tvLblAlaSupplier"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="5dp"
                                    android:text=":"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tvResAlaSupplier"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tv_titikd9"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="start|center_vertical"
                                    android:paddingRight="5dp"
                                    android:text="Surabaya"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </RelativeLayout>

                            <!--Area/Satker-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:id="@+id/tvLblArea"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="start|center_vertical"
                                    android:text="Area"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_titikd6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tvLblArea"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="5dp"
                                    android:text=":"
                                    android:textColor="@color/black" />


                                <TextView
                                    android:id="@+id/tvResArea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tv_titikd6"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="start|center_vertical"
                                    android:text="Malang/Perikanan"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                            </RelativeLayout>

                            <!--Status-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:id="@+id/tvLblSTS"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="start|center_vertical"
                                    android:text="Status"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_titikd13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tvLblSTS"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="5dp"
                                    android:text=":"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tvResSTS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tv_titikd13"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="start|center_vertical"
                                    android:paddingRight="5dp"
                                    android:text="Belum dikonvert"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                            </RelativeLayout>
                        </LinearLayout>

                        <!--Jumlah-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/tvLblJMLItem"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="start|center_vertical"
                                android:text="Jumlah"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_titikd14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblJMLItem"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvResJMLItem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd14"
                                android:fontFamily="@font/poppins"
                                android:gravity="start|center_vertical"
                                android:text="3 item"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <!--Total Harga-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/tvLblTotalHrg"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="start|center_vertical"
                                android:text="Total Harga"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_titikd7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblTotalHrg"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvResTotalHrg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd7"
                                android:fontFamily="@font/poppins"
                                android:gravity="start|center_vertical"
                                android:paddingRight="5dp"
                                android:text="Rp 15.000"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                        </RelativeLayout>
                        <!--Button-->

                        <TextView
                            android:id="@+id/imgDetailpener"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_baseline_keyboard_arrow_down_24"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnShowDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_outline"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:text="Show Detail >>"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <include
        layout="@layout/card_penerimaan"/>

</LinearLayout>