<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_transparant_manual_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceivedManualBookFragment">
    
    <TextView
        android:id="@+id/tapBackgroundManualBook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/cardLinearManualBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="6dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--No Purchase-->

                        <TextView
                            android:id="@+id/tvResIdTrans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sby-001-11"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/tvLblNamaItem"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="start|center_vertical"
                                android:text="No Purchase"
                                android:textAllCaps="true"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_titikd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblNamaItem"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/tvResNmItem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd"
                                android:fontFamily="@font/poppins"
                                android:gravity="start|center_vertical"
                                android:paddingEnd="5dp"
                                android:text="MLG-001-12"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <!--Tanggal-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/tvLblTGL"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="start|center_vertical"
                                android:text="Tanggal"
                                android:textAllCaps="true"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_titikd5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblTGL"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/tvResTGL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd5"
                                android:fontFamily="@font/poppins"
                                android:gravity="start|center_vertical"
                                android:text="12 Juli 2021"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/linearExpandDetailContainerManualBook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <!--Admin-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:id="@+id/tvLblSupplier"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="start|center_vertical"
                                    android:text="Supplier"
                                    android:textAllCaps="true"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_titikd12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tvLblSupplier"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="5dp"
                                    android:text=":" />

                                <TextView
                                    android:id="@+id/tvResSupplier"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tv_titikd12"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="start|center_vertical"
                                    android:paddingRight="5dp"
                                    android:text="PT POCARI"
                                    android:textSize="14sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:id="@+id/tvLblAlaSupplier"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="start|center_vertical"
                                    android:text="Alamat"
                                    android:textAllCaps="true"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_titikd9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tvLblAlaSupplier"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="5dp"
                                    android:text=":" />

                                <TextView
                                    android:id="@+id/tvResAlaSupplier"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tv_titikd9"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="start|center_vertical"
                                    android:paddingRight="5dp"
                                    android:text="JL. Mengkudu no.25"
                                    android:textSize="14sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </RelativeLayout>

                            <!--Area/Satker-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:id="@+id/tvLblArea"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="start|center_vertical"
                                    android:text="Area"
                                    android:textAllCaps="true"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_titikd6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tvLblArea"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="5dp"
                                    android:text=":" />


                                <TextView
                                    android:id="@+id/tvResArea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tv_titikd6"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="start|center_vertical"
                                    android:text="MALANG"
                                    android:textSize="14sp" />

                            </RelativeLayout>

                            <!--Status-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:id="@+id/tvLblSTS"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="start|center_vertical"
                                    android:text="Status"
                                    android:textAllCaps="true"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_titikd13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tvLblSTS"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:gravity="center"
                                    android:paddingHorizontal="5dp"
                                    android:text=":" />

                                <TextView
                                    android:id="@+id/tvResSTS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/tv_titikd13"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="start|center_vertical"
                                    android:paddingRight="5dp"
                                    android:text="Belum dikonvert"
                                    android:textSize="14sp" />

                            </RelativeLayout>
                        </LinearLayout>

                        <!--Jumlah-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/tvLblJMLItem"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="start|center_vertical"
                                android:text="Jumlah"
                                android:textAllCaps="true"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_titikd14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblJMLItem"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/tvResJMLItem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd14"
                                android:fontFamily="@font/poppins"
                                android:gravity="start|center_vertical"
                                android:text="3 item"
                                android:textSize="14sp" />

                        </RelativeLayout>

                        <!--Total Harga-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/tvLblTotalHrg"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="start|center_vertical"
                                android:text="Total Harga"
                                android:textAllCaps="true"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_titikd7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tvLblTotalHrg"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:paddingHorizontal="5dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/tvResTotalHrg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/tv_titikd7"
                                android:fontFamily="@font/poppins"
                                android:gravity="start|center_vertical"
                                android:paddingRight="5dp"
                                android:text="Rp 15.000"
                                android:textSize="14sp"
                                tools:ignore="TouchTargetSizeCheck" />

                        </RelativeLayout>
                        <!--Button-->

                        <TextView
                            android:id="@+id/imgDetailpener"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ic_baseline_keyboard_arrow_down_24" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnShowDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_button_outline"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Show Detail >>"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/tap2ManualBook"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="-140dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/tap" />
                </RelativeLayout>

            </LinearLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/tapManualBook"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:transitionName="imgTrans"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/tap" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

