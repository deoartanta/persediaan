<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvQtyPener"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@id/tvSatuanPener"
                android:layout_alignBottom="@id/tvSatuanPener"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/tvSatuanPener"
                android:background="@color/colorShimmer"
                android:gravity="center_vertical"
                android:text="qty"
                android:textColor="@color/colorShimmer" />

            <TextView
                android:id="@+id/tvNmItemPener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorShimmer"
                android:text="Nama Item"
                android:textColor="@color/colorShimmer" />

            <TextView
                android:id="@+id/tvSatuanPener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHrgPener"
                android:layout_alignEnd="@+id/tvHrgPener"
                android:background="@color/colorShimmer"
                android:paddingVertical="10dp"
                android:text="satuan"
                android:textColor="@color/colorShimmer" />

            <TextView
                android:id="@+id/tvHrgPener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/imgEdit"
                android:background="@color/colorShimmer"
                android:gravity="right"
                android:text="harga"
                android:textColor="@color/colorShimmer" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/tvSatuanPener"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:background="@color/colorShimmer" />

            <TextView
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_below="@id/tvSatuanPener"
                android:layout_alignStart="@id/tvTtlHrgPener"
                android:layout_alignEnd="@id/imgEdit"
                android:layout_marginTop="5dp"
                android:background="@color/colorShimmer"
                android:textColor="@color/colorShimmer" />

            <TextView
                android:id="@+id/tvTtlHrgPener"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/imgEdit"
                android:background="@color/colorShimmer"
                android:gravity="right"
                android:text="total harga"
                android:textColor="@color/colorShimmer" />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>